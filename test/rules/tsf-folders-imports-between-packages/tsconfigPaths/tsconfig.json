{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["dom", "es2016.array.include", "es2018.promise", "es2017"],
      "noEmit": true,
      "noEmitOnError": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "baseUrl": ".",
      "strict": true,
      "paths": {
        "my-editor/*": ["my-editor/src/*"],
        "my-editor-api": ["my-editor/api"],
        "@my/viewer/*": ["my-viewer/src/*"],
        "@my/viewer-api": ["my-viewer/api"]
      }
    },
    "include": ["src"]
}
